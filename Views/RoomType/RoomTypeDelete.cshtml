
@model RoomTypeDto

<form asp-action="RoomTypeDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete RoomType</h1>
        <input hidden asp-for="RoomTypeID" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Photo</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discription</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Discription" disabled class="form-control" rows="5"></textarea>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Services</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Services" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Size</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Size" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Capacity</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Capacity" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                @* <input type="button" class="btn btn-outline-primary" value="Back to List" /> *@
                <a asp-action="RoomTypeIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" onclick="return fun1()" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>


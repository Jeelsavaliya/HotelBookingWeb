            <div class="col-3">
                <label class="control-label pt-2" style="font-size:20px;">First Name</label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label class="control-label pt-2" style="font-size:20px;">Last Name</label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label class="control-label pt-2" style="font-size:20px;">Phone Number</label>
            </div>
            <div class="col-9 pb-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label class="control-label pt-2" style="font-size:20px;">Email</label>
            </div>

            <div class="col-9 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-3">
                <label class="control-label pt-2" style="font-size:20px;">Address</label>
            </div>
            <div class="col-9 pb-3">
                <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-3">
                    <label class="control-label pt-2" style="font-size:20px;">Check In Time</label>
                </div>
                <div class="col-3 pb-3">
                    <input type="datetime-local" asp-for="CheckInDate" class="form-control" />
                    
                    <span asp-validation-for="CheckInDate" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label class="control-label pt-2" style="font-size:20px;">Check Out Time</label>
                </div>
                <div class="col-3 pb-3">
                    <input type="datetime-local" asp-for="CheckOutDate" class="form-control" />
                    
                    <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                </div>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Book Room" class="btn btn-outline-success form-control" />

            </div>
            <div class="col-5">

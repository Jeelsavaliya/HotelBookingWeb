<script>
    

    function myFunction() {

        var minToDate = document.getElementById("fDate").value;
        document.getElementById("tDate").value = minToDate;


        //Maximum 30 Days are enable
        var maxToDate = new Date(minToDate);
        maxToDate.setDate(maxToDate.getDate() + 30);
        maxToDate = maxToDate.toISOString().slice(0, 10);
//        maxToDate = maxToDate.toLocaleDateString("en-CA");

        document.getElementById("tDate").setAttribute("min", minToDate);
        document.getElementById("tDate").setAttribute("max", maxToDate);

    }

</script>


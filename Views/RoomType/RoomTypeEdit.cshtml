@model RoomTypeDto

<form asp-action="RoomTypeEdit" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit RoomType</h1>
        <input hidden asp-for="RoomTypeID"/>
        <hr/>
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Photo</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="File" class="form-control" />
                <input asp-for="Image" hidden class="form-control" />
                @*<input asp-for="ImageLocalPath" hidden class="form-control" /> *@
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name"  class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discription</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Discription"  class="form-control" rows="5"></textarea>
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Services</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Services"  class="form-control" />
                <span asp-validation-for="Services" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Size</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Size"  class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Capacity</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Capacity"  class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price Per Night</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PricePerNight" class="form-control" />
                <span asp-validation-for="PricePerNight" class="text-danger"></span>
            </div>

            <div class="col-4">
                <input type="submit" value="Update" class="btn btn-outline-success form-control" />
            </div>
            <div class="col-4">
                <a asp-action="RoomTypeIndex" class="btn btn-outline-primary form-control ">Back to List</a>
            </div>
            <div class="col-4">
                <input type="reset" value="Clear Form" class="btn btn-outline-info form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
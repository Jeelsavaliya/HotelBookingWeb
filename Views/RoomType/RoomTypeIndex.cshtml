    <div id="sample_1_filter" class="dataTables_filter col-md-2">
        <input type="text" placeholder="Search here..." id="sample_1" style="margin-left: -115px;"S />
    </div>
    <div class="col-2">
        <a class="btn btn-success btn-sm" asp-controller="RoomType" asp-action="RoomTypeCreate">Add RoomType<i class="bi bi-trash"></i></a>
    </div>
</div>
<hr />
<br />

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

           @*  <div class="row">
                <div class="col-8">
                    <h3>Room Type List</h3>
